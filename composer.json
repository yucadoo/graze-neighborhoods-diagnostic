{
    "name": "YucaDoo/graze-neighborhoods-diagnostic",
    "type": "library",
    "description": "Exception detection strategy for Graze's transient fault handler using Neighborhoods' throwable diagnostic component.",
    "keywords": [
        "yucadoo",
        "transient fault",
        "retry"
    ],
    "homepage": "https://github.com/YucaDoo/graze-neighborhoods-diagnostic",
    "license": "MIT",
    "authors": [
        {
            "name": "Hrvoje Jukic",
            "email": "hrcajuka@gmail.com",
            "homepage": "https://yuca.ba",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "YucaDoo\\GrazeNeighborhoodsDiagnostic\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YucaDoo\\GrazeNeighborhoodsDiagnostic\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
